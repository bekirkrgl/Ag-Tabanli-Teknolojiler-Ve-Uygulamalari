<script>
// Horizontal Scroll Functions
function scrollDoctors(direction) {
    const container = document.getElementById('doctorsScroll');
    const scrollAmount = 400;
    
    if (direction === 'left') {
        container.scrollBy({
            left: -scrollAmount,
            behavior: 'smooth'
        });
    } else {
        container.scrollBy({
            left: scrollAmount,
            behavior: 'smooth'
        });
    }
}


// Touch support for mobile
document.addEventListener('DOMContentLoaded', function() {
    const doctorsContainer = document.getElementById('doctorsScroll');
    
    if (doctorsContainer) {
        let isDown = false;
        let startX;
        let scrollLeft;
        
        doctorsContainer.addEventListener('mousedown', (e) => {
            isDown = true;
            doctorsContainer.classList.add('active');
            startX = e.pageX - doctorsContainer.offsetLeft;
            scrollLeft = doctorsContainer.scrollLeft;
        });
        
        doctorsContainer.addEventListener('mouseleave', () => {
            isDown = false;
            doctorsContainer.classList.remove('active');
        });
        
        doctorsContainer.addEventListener('mouseup', () => {
            isDown = false;
            doctorsContainer.classList.remove('active');
        });
        
        doctorsContainer.addEventListener('mousemove', (e) => {
            if (!isDown) return;
            e.preventDefault();
            const x = e.pageX - doctorsContainer.offsetLeft;
            const walk = (x - startX) * 2;
            doctorsContainer.scrollLeft = scrollLeft - walk;
        });
    }
    
