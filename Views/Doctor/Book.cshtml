@model HastaneRandevuSistemi.Models.Appointment

@{
    ViewData["Title"] = "Randevu Al";
    var doctor = ViewBag.Doctor as HastaneRandevuSistemi.Models.Doctor;
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4><i class="fas fa-calendar-plus"></i> Randevu Al - @doctor?.FullName</h4>
            </div>
            <div class="card-body">
                <form asp-action="Book">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <input type="hidden" asp-for="DoctorId" value="@doctor?.Id" />
                    
                    <div class="mb-3">
                        <label asp-for="PatientId" class="form-label"></label>
                        <select asp-for="PatientId" class="form-select" asp-items="ViewBag.PatientId">
                            <option value="">Hasta seçiniz</option>
                        </select>
                        <span asp-validation-for="PatientId" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="AppointmentDate" class="form-label"></label>
                                <input asp-for="AppointmentDate" class="form-control" type="date" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="AppointmentTime" class="form-label"></label>
                                <input asp-for="AppointmentTime" class="form-control" type="time" />
                                <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Randevu notları (opsiyonel)"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Randevu Al
                        </button>
                        <a asp-action="Availability" asp-route-id="@doctor?.Id" class="btn btn-success">
                            <i class="fas fa-clock"></i> Müsaitlik Takvimi
                        </a>
                        <a asp-action="Details" asp-route-id="@doctor?.Id" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-user-md"></i> Doktor Bilgileri</h5>
            </div>
            <div class="card-body">
                <p><strong>Ad Soyad:</strong> @doctor?.FullName</p>
                <p><strong>Branş:</strong> @doctor?.Specialization?.Name</p>
                <p><strong>E-posta:</strong> @doctor?.Email</p>
                <p><strong>Telefon:</strong> @doctor?.PhoneNumber</p>
                
                @if (!string.IsNullOrEmpty(doctor?.Biography))
                {
                    <hr>
                    <p><strong>Biyografi:</strong></p>
                    <p class="text-muted small">@doctor.Biography</p>
                }
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5><i class="fas fa-info-circle"></i> Randevu Bilgileri</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success"></i> Randevu tarihi bugünden ileri olmalıdır</li>
                    <li><i class="fas fa-check text-success"></i> Çalışma saatleri içinde olmalıdır</li>
                    <li><i class="fas fa-check text-success"></i> Müsait olan saatler seçilmelidir</li>
                    <li><i class="fas fa-check text-success"></i> Hasta bilgileri doğru olmalıdır</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // URL'den datetime parametresi varsa formu doldur
            var urlParams = new URLSearchParams(window.location.search);
            var datetime = urlParams.get('datetime');
            if (datetime) {
                var dateTime = new Date(datetime);
                $('#AppointmentDate').val(dateTime.toISOString().split('T')[0]);
                $('#AppointmentTime').val(dateTime.toTimeString().split(' ')[0].substring(0, 5));
            }
        });
    </script>
}
