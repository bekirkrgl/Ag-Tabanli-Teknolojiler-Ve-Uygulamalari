@model HastaneRandevuSistemi.Models.Doctor

@{
    ViewData["Title"] = "Yeni Doktor Ekle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0">
                        <i class="fas fa-user-md me-3"></i>
                        Yeni Doktor Ekle
                    </h2>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FirstName" class="form-control" placeholder="Ad" />
                                    <label asp-for="FirstName" class="form-label">Ad <span class="text-danger">*</span></label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" placeholder="Soyad" />
                                    <label asp-for="LastName" class="form-label">Soyad <span class="text-danger">*</span></label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control" placeholder="E-posta" />
                                    <label asp-for="Email" class="form-label">E-posta <span class="text-danger">*</span></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon" />
                                    <label asp-for="PhoneNumber" class="form-label">Telefon <span class="text-danger">*</span></label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="SpecializationId" class="form-control" asp-items="ViewBag.SpecializationId">
                                        <option value="">Branş Seçin</option>
                                    </select>
                                    <label asp-for="SpecializationId" class="form-label">Branş <span class="text-danger">*</span></label>
                                    <span asp-validation-for="SpecializationId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="PhotoUrl" class="form-control" placeholder="Fotoğraf URL" />
                                    <label asp-for="PhotoUrl" class="form-label">Fotoğraf URL</label>
                                    <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Biography" class="form-control" placeholder="Biyografi" style="height: 120px;"></textarea>
                                    <label asp-for="Biography" class="form-label">Biyografi</label>
                                    <span asp-validation-for="Biography" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label">Aktif</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center gap-3 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="fas fa-save me-2"></i> Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">
                                <i class="fas fa-arrow-left me-2"></i> Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}