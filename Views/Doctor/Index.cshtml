            <div class="col-lg-8">
                <h1 class="page-title fade-in">
                    <i class="fas fa-user-md me-3"></i>
                    üë®‚Äç‚öïÔ∏è Uzman Doktorlarƒ±mƒ±z
                </h1>
                <p class="page-subtitle fade-in">
                    Deneyimli ve uzman doktorlarƒ±mƒ±zla tanƒ±≈üƒ±n, saƒülƒ±ƒüƒ±nƒ±zƒ± g√ºvence altƒ±na alƒ±n
                </p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a asp-action="Create" class="btn btn-success-modern btn-modern fade-in">
                    <i class="fas fa-plus"></i>
                    ‚ûï Yeni Doktor Ekle
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Fƒ∞LTRE VE ARAMA B√ñL√úM√ú -->
<div class="container">
    <div class="filter-section fade-in">
        <h3 class="filter-title">
            <i class="fas fa-filter"></i>
            Doktor Filtreleme
        </h3>
        
        <div class="search-box">
            <input type="text" class="search-input" id="searchInput" placeholder="Doktor adƒ±, bran≈ü veya uzmanlƒ±k alanƒ± ara...">
            <i class="fas fa-search search-icon"></i>
        </div>
        
        <div class="specialization-filter">
            <div class="filter-chip active" data-specialization="all">T√ºm√º</div>
            <div class="filter-chip" data-specialization="Kardiyoloji">Kardiyoloji</div>
            <div class="filter-chip" data-specialization="√áocuk Saƒülƒ±ƒüƒ±">√áocuk Saƒülƒ±ƒüƒ±</div>
            <div class="filter-chip" data-specialization="Ortopedi">Ortopedi</div>
            <div class="filter-chip" data-specialization="Kadƒ±n Hastalƒ±klarƒ±">Kadƒ±n Hastalƒ±klarƒ±</div>
            <div class="filter-chip" data-specialization="G√∂z Hastalƒ±klarƒ±">G√∂z Hastalƒ±klarƒ±</div>
            <div class="filter-chip" data-specialization="Dermatoloji">Dermatoloji</div>
        </div>
    </div>
</div>

<!-- DOKTORLAR GRƒ∞D -->
<div class="container">
    @if (Model.Any())
    {
        <div class="doctors-grid" id="doctorsGrid">
            @foreach (var doctor in Model)
            {
                <div class="doctor-card fade-in" data-specialization="@doctor.Specialization?.Name" data-name="@doctor.FullName.ToLower()">
                    <div class="doctor-avatar">
                        @if (!string.IsNullOrEmpty(doctor.PhotoUrl))
                        {
                            <img src="@doctor.PhotoUrl" alt="@doctor.FullName" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <i class="fas fa-user-md" style="display: none;"></i>
                        }
                        else
                        {
                            <i class="fas fa-user-md"></i>
                        }
                    </div>
                    
                    <h3 class="doctor-name">Dr. @doctor.FullName</h3>
                    <div class="doctor-specialization">
                        <i class="fas fa-stethoscope"></i>
                        @doctor.Specialization?.Name
                    </div>
                    
                    <div class="doctor-info">
                        @if (!string.IsNullOrEmpty(doctor.Email))
                        {
                            <div class="info-item">
                                <i class="fas fa-envelope"></i>
                                @doctor.Email
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(doctor.PhoneNumber))
                        {
                            <div class="info-item">
                                <i class="fas fa-phone"></i>
                                @doctor.PhoneNumber
                            </div>
                        }
                        <div class="info-item">
                            <i class="fas fa-calendar-plus"></i>
                            @doctor.CreatedDate.ToString("dd MMMM yyyy")
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(doctor.Biography))
                    {
                        <div class="doctor-bio">
                            <i class="fas fa-quote-left me-2"></i>
                            @(doctor.Biography.Length > 120 ? doctor.Biography.Substring(0, 120) + "..." : doctor.Biography)
                        </div>
                    }
                    
                    <div class="doctor-stats">
                        <div class="stat-item">
                            <i class="fas fa-star"></i>
                            <span>4.9</span>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-users"></i>
                            <span>500+</span>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-clock"></i>
                            <span>5 yƒ±l</span>
                        </div>
                    </div>
                    
                    <div class="doctor-actions">
                        <a asp-action="Details" asp-route-id="@doctor.Id" class="btn-modern btn-primary-modern">
                            <i class="fas fa-eye"></i>
                            üëÅÔ∏è Detaylar
                        </a>
                        <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn-modern btn-outline-modern">
                            <i class="fas fa-edit"></i>
                            ‚úèÔ∏è D√ºzenle
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state fade-in">
            <div class="empty-icon">
                <i class="fas fa-user-md"></i>
            </div>
            <h3 class="mt-3">Hen√ºz doktor bilgisi bulunmamaktadƒ±r</h3>
            <p class="text-muted">Yakƒ±nda eklenecek...</p>
            <a asp-action="Create" class="btn btn-success-modern btn-modern mt-3">
                <i class="fas fa-plus"></i>
                ‚ûï ƒ∞lk Doktoru Ekle
            </a>
        </div>
    }
</div>

<script>
// Sayfa y√ºklendiƒüinde animasyonlarƒ± ba≈ülat
document.addEventListener('DOMContentLoaded', function() {
    // Fade-in animasyonlarƒ± i√ßin gecikme ekle
    const fadeElements = document.querySelectorAll('.fade-in');
    fadeElements.forEach((element, index) => {
        element.style.animationDelay = `${index * 0.1}s`;
    });
    
    // Arama fonksiyonu
    const searchInput = document.getElementById('searchInput');
    const doctorCards = document.querySelectorAll('.doctor-card');
    
    searchInput.addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        
        doctorCards.forEach(card => {
            const doctorName = card.dataset.name;
            const specialization = card.dataset.specialization?.toLowerCase() || '';
            
            if (doctorName.includes(searchTerm) || specialization.includes(searchTerm)) {
                card.style.display = 'block';
                card.style.animation = 'fadeIn 0.5s ease-in-out';
            } else {
                card.style.display = 'none';
            }
        });
    });
    
    // Bran≈ü filtresi
    const filterChips = document.querySelectorAll('.filter-chip');
    
    filterChips.forEach(chip => {
        chip.addEventListener('click', function() {
            // Aktif chip'i g√ºncelle
            filterChips.forEach(c => c.classList.remove('active'));
            this.classList.add('active');
            
            const selectedSpecialization = this.dataset.specialization;
            
            doctorCards.forEach(card => {
                const cardSpecialization = card.dataset.specialization;
                
                if (selectedSpecialization === 'all' || cardSpecialization === selectedSpecialization) {
                    card.style.display = 'block';
                    card.style.animation = 'fadeIn 0.5s ease-in-out';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    });
    
    // Hover efektleri i√ßin ekstra animasyonlar
    const doctorCards = document.querySelectorAll('.doctor-card');
    doctorCards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-12px) scale(1.03)';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0) scale(1)';
        });
    });
    
    // Scroll animasyonlarƒ±
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver(function(entries) {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.animation = 'fadeIn 0.8s ease-in-out';
            }
        });
    }, observerOptions);
    
    doctorCards.forEach(card => {
        observer.observe(card);
    });
});
</script>