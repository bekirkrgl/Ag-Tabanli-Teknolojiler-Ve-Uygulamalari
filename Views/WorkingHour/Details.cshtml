@model HastaneRandevuSistemi.Models.WorkingHour

@{
    ViewData["Title"] = "Çalışma Saati Detayları";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4><i class="fas fa-clock"></i> Çalışma Saati Detayları</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5><i class="fas fa-user-md"></i> Doktor Bilgileri</h5>
                        <p><strong>Ad Soyad:</strong> @Model.Doctor?.FullName</p>
                        <p><strong>Branş:</strong> @Model.Doctor?.Specialization?.Name</p>
                        <p><strong>E-posta:</strong> @Model.Doctor?.Email</p>
                        <p><strong>Telefon:</strong> @Model.Doctor?.PhoneNumber</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fas fa-calendar"></i> Çalışma Saati Bilgileri</h5>
                        <p><strong>Gün:</strong> @Model.DayOfWeek.ToString()</p>
                        <p><strong>Başlangıç Saati:</strong> @Model.StartTime.ToString(@"hh\:mm")</p>
                        <p><strong>Bitiş Saati:</strong> @Model.EndTime.ToString(@"hh\:mm")</p>
                        <p><strong>Durum:</strong> 
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                @(Model.IsActive ? "Aktif" : "Pasif")
                            </span>
                        </p>
                    </div>
                </div>
                
                <hr>
                
                <div class="row">
                    <div class="col-md-6">
                        <h5><i class="fas fa-info-circle"></i> Çalışma Süresi</h5>
                        <p><strong>Toplam Süre:</strong> @((Model.EndTime - Model.StartTime).TotalHours) saat</p>
                        <p><strong>Çalışma Aralığı:</strong> @Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")</p>
                    </div>
                    <div class="col-md-6">
                        <h5><i class="fas fa-chart-bar"></i> İstatistikler</h5>
                        <p><strong>Haftalık Gün:</strong> @Model.DayOfWeek.ToString()</p>
                        <p><strong>Durum:</strong> 
                            @if (Model.IsActive)
                            {
                                <span class="text-success">Aktif - Doktor bu gün çalışıyor</span>
                            }
                            else
                            {
                                <span class="text-muted">Pasif - Doktor bu gün çalışmıyor</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-cogs"></i> İşlemler</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                    <a asp-controller="Doctor" asp-action="Details" asp-route-id="@Model.DoctorId" class="btn btn-info">
                        <i class="fas fa-user-md"></i> Doktor Detayları
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5><i class="fas fa-info-circle"></i> Bilgi</h5>
            </div>
            <div class="card-body">
                <p>Çalışma saatleri:</p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success"></i> Doktorun müsait olduğu günleri belirler</li>
                    <li><i class="fas fa-check text-success"></i> Randevu alınabilir saatleri gösterir</li>
                    <li><i class="fas fa-check text-success"></i> Haftalık düzenli çalışma planını oluşturur</li>
                </ul>
            </div>
        </div>
    </div>
</div>
