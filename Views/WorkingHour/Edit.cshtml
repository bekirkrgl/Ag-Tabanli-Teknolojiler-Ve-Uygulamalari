@model HastaneRandevuSistemi.Models.WorkingHour

@{
    ViewData["Title"] = "Çalışma Saati Düzenle";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h4><i class="fas fa-edit"></i> Çalışma Saati Düzenle</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="DoctorId" class="form-label"></label>
                        <select asp-for="DoctorId" class="form-select" asp-items="ViewBag.DoctorId">
                            <option value="">Doktor seçiniz</option>
                        </select>
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DayOfWeek" class="form-label"></label>
                        <select asp-for="DayOfWeek" class="form-select" asp-items="Html.GetEnumSelectList<DayOfWeek>()">
                            <option value="">Gün seçiniz</option>
                        </select>
                        <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="StartTime" class="form-label"></label>
                                <input asp-for="StartTime" class="form-control" type="time" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="EndTime" class="form-label"></label>
                                <input asp-for="EndTime" class="form-control" type="time" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save"></i> Güncelle
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-eye"></i> Detaylar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-info-circle"></i> Bilgi</h5>
            </div>
            <div class="card-body">
                <p><strong>Doktor:</strong> @Model.Doctor?.FullName</p>
                <p><strong>Gün:</strong> @Model.DayOfWeek.ToString()</p>
                <p><strong>Mevcut Saatler:</strong> @Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")</p>
                <p><strong>Durum:</strong> 
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                        @(Model.IsActive ? "Aktif" : "Pasif")
                    </span>
                </p>
                <hr>
                <p>Çalışma saati düzenlerken:</p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success"></i> Tüm alanları kontrol edin</li>
                    <li><i class="fas fa-check text-success"></i> Bitiş saati başlangıç saatinden sonra olmalı</li>
                    <li><i class="fas fa-check text-success"></i> Durum değişikliklerini kaydedin</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Bitiş saati başlangıç saatinden sonra olmalı kontrolü
            $('#StartTime, #EndTime').on('change', function() {
                var startTime = $('#StartTime').val();
                var endTime = $('#EndTime').val();
                
                if (startTime && endTime) {
                    if (startTime >= endTime) {
                        $('#EndTime')[0].setCustomValidity('Bitiş saati başlangıç saatinden sonra olmalıdır');
                    } else {
                        $('#EndTime')[0].setCustomValidity('');
                    }
                }
            });
        });
    </script>
}
