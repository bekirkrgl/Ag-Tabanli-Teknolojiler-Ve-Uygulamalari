@model HastaneRandevuSistemi.Models.AvailabilityBlock

@{
    ViewData["Title"] = "Yeni Müsaitlik Bloğu Ekle";
}

<style>
/* MODERN MÜSAİTLİK BLOĞU FORMU CSS */
.form-container {
    background: white;
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 1px solid #e2e8f0;
    max-width: 800px;
    margin: 0 auto;
}

.form-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 2rem;
    color: #2d3748;
    background: linear-gradient(135deg, #dc3545, #c82333);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.form-subtitle {
    text-align: center;
    color: #718096;
    font-size: 1.1rem;
    margin-bottom: 3rem;
}

.form-row {
    display: flex;
    gap: 2rem;
    margin-bottom: 2rem;
}

.form-group {
    margin-bottom: 2rem;
    flex: 1;
}

.form-label {
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 0.5rem;
    display: block;
    font-size: 1.1rem;
}

.form-control, .form-select {
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    padding: 12px 16px;
    font-size: 1rem;
    transition: all 0.3s ease;
    width: 100%;
}

.form-control:focus, .form-select:focus {
    border-color: #dc3545;
    box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
    outline: none;
}

.form-control.is-invalid, .form-select.is-invalid {
    border-color: #dc3545;
}

.invalid-feedback {
    color: #dc3545;
    font-size: 0.875rem;
    margin-top: 0.25rem;
}

.datetime-input {
    position: relative;
}

.datetime-input .form-control {
    padding-right: 40px;
}

.datetime-icon {
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    color: #dc3545;
    pointer-events: none;
}

.textarea-custom {
    min-height: 120px;
    resize: vertical;
}

.checkbox-group {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: #f8fafc;
    border-radius: 12px;
    margin-bottom: 2rem;
}

.checkbox-input {
    width: 20px;
    height: 20px;
    accent-color: #dc3545;
}

.checkbox-label {
    font-weight: 600;
    color: #2d3748;
    margin: 0;
    cursor: pointer;
}

.btn-modern {
    padding: 15px 30px;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    border: none;
    cursor: pointer;
    font-size: 1rem;
}

.btn-modern:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.15);
}

.btn-primary-modern {
    background: linear-gradient(135deg, #dc3545, #c82333);
    color: white;
}

.btn-outline-modern {
    background: transparent;
    color: #dc3545;
    border: 3px solid #dc3545;
}

.btn-outline-modern:hover {
    background: #dc3545;
    color: white;
}

.form-icon {
    color: #dc3545;
    margin-right: 0.5rem;
}

.required {
    color: #dc3545;
}

.warning-box {
    background: #fff3cd;
    border: 2px solid #ffeaa7;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 2rem;
}

.warning-icon {
    color: #856404;
    font-size: 1.5rem;
    margin-right: 0.5rem;
}

.warning-title {
    color: #856404;
    font-weight: 700;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
}

.warning-text {
    color: #856404;
    margin: 0;
    font-size: 0.95rem;
}

@@media (max-width: 768px) {
    .form-container {
        padding: 2rem 1.5rem;
    }
    
    .form-title {
        font-size: 2rem;
    }
    
    .form-row {
        flex-direction: column;
        gap: 0;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
}
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="form-container">
                <h2 class="form-title">
                    <i class="fas fa-ban me-3"></i>
                    Yeni Müsaitlik Bloğu Ekle
                </h2>
                <p class="form-subtitle">
                    Doktor için müsait olmadığı zaman aralığını belirleyin
                </p>
                
                <div class="warning-box">
                    <h4 class="warning-title">
                        <i class="fas fa-exclamation-triangle warning-icon"></i>
                        Dikkat!
                    </h4>
                    <p class="warning-text">
                        Bu blok, seçilen doktorun belirtilen tarih ve saat aralığında müsait olmadığını belirtir. 
                        Bu süre zarfında doktor için randevu alınamayacaktır.
                    </p>
                </div>
                
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    @if (ViewBag.Doctor != null)
                    {
                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-user-md form-icon"></i>
                                Doktor
                            </label>
                            <div class="form-control" style="background-color: #f8f9fa; border: 2px solid #e9ecef;">
                                <strong>@ViewBag.Doctor.FullName</strong> - @ViewBag.Doctor.Specialization.Name
                            </div>
                        </div>
                    }
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="StartDateTime" class="form-label">
                                <i class="fas fa-play form-icon"></i>
                                Başlangıç Tarihi ve Saati <span class="required">*</span>
                            </label>
                            <div class="datetime-input">
                                <input asp-for="StartDateTime" type="datetime-local" class="form-control" />
                                <i class="fas fa-calendar-alt datetime-icon"></i>
                            </div>
                            <span asp-validation-for="StartDateTime" class="invalid-feedback"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="EndDateTime" class="form-label">
                                <i class="fas fa-stop form-icon"></i>
                                Bitiş Tarihi ve Saati <span class="required">*</span>
                            </label>
                            <div class="datetime-input">
                                <input asp-for="EndDateTime" type="datetime-local" class="form-control" />
                                <i class="fas fa-calendar-alt datetime-icon"></i>
                            </div>
                            <span asp-validation-for="EndDateTime" class="invalid-feedback"></span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Reason" class="form-label">
                            <i class="fas fa-comment form-icon"></i>
                            Sebep
                        </label>
                        <textarea asp-for="Reason" class="form-control textarea-custom" placeholder="Müsaitlik bloğunun sebebini açıklayın (örn: Tatil, Seminer, Kişisel nedenler...)"></textarea>
                        <span asp-validation-for="Reason" class="invalid-feedback"></span>
                    </div>
                    
                    <div class="checkbox-group">
                        <input asp-for="IsActive" type="checkbox" class="checkbox-input" checked />
                        <label asp-for="IsActive" class="checkbox-label">
                            <i class="fas fa-check-circle form-icon"></i>
                            Bu müsaitlik bloğu aktif olsun
                        </label>
                    </div>
                    
                    <div class="d-flex gap-3 justify-content-center mt-4">
                        <button type="submit" class="btn-modern btn-primary-modern">
                            <i class="fas fa-save"></i>
                            Kaydet
                        </button>
                        <a asp-action="Index" class="btn-modern btn-outline-modern">
                            <i class="fas fa-arrow-left"></i>
                            Geri Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const startDateTimeInput = document.querySelector('input[name="StartDateTime"]');
            const endDateTimeInput = document.querySelector('input[name="EndDateTime"]');
            
            // Minimum tarih bugün olsun
            const today = new Date();
            const tomorrow = new Date(today);
            tomorrow.setDate(tomorrow.getDate() + 1);
            const tomorrowString = tomorrow.toISOString().slice(0, 16);
            
            startDateTimeInput.setAttribute('min', tomorrowString);
            endDateTimeInput.setAttribute('min', tomorrowString);
            
            // Başlangıç tarihi değiştiğinde bitiş tarihini güncelle
            startDateTimeInput.addEventListener('change', function() {
                const startDateTime = this.value;
                if (startDateTime) {
                    endDateTimeInput.setAttribute('min', startDateTime);
                }
            });
        });
    </script>
}