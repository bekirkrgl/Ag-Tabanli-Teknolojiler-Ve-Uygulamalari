@model HastaneRandevuSistemi.Models.AvailabilityBlock

@{
    ViewData["Title"] = "Müsaitlik Bloğu Sil";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-exclamation-triangle"></i> Müsaitlik Bloğu Sil</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h5><i class="fas fa-warning"></i> Dikkat!</h5>
                    <p>Bu işlem geri alınamaz. Müsaitlik bloğu silindiğinde:</p>
                    <ul>
                        <li>Müsaitlik bloğu pasif duruma getirilecek</li>
                        <li>Mevcut randevular etkilenmeyecek</li>
                        <li>Doktor bilgileri korunacak</li>
                    </ul>
                </div>
                
                <h5>Silinecek Müsaitlik Bloğu Bilgileri:</h5>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Doktor:</strong> @Model.Doctor?.FullName</p>
                        <p><strong>Branş:</strong> @Model.Doctor?.Specialization?.Name</p>
                        <p><strong>Başlangıç:</strong> @Model.StartDateTime.ToString("dd.MM.yyyy HH:mm")</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Bitiş:</strong> @Model.EndDateTime.ToString("dd.MM.yyyy HH:mm")</p>
                        <p><strong>Durum:</strong> 
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                @(Model.IsActive ? "Aktif" : "Pasif")
                            </span>
                        </p>
                        <p><strong>Oluşturulma:</strong> @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <hr>
                    <p><strong>Açıklama:</strong></p>
                    <div class="alert alert-light">
                        <p class="mb-0">@Model.Description</p>
                    </div>
                }
                
                <hr>
                
                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle"></i> Süre Bilgileri</h6>
                    @{
                        var duration = Model.EndDateTime - Model.StartDateTime;
                    }
                    <p><strong>Toplam Süre:</strong> 
                        @if (duration.TotalDays >= 1)
                        {
                            <span class="badge bg-info">@((int)duration.TotalDays) gün @((int)(duration.TotalHours % 24)) saat</span>
                        }
                        else if (duration.TotalHours >= 1)
                        {
                            <span class="badge bg-warning">@((int)duration.TotalHours) saat @((int)(duration.TotalMinutes % 60)) dakika</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@((int)duration.TotalMinutes) dakika</span>
                        }
                    </p>
                    <p><strong>Geçerlilik:</strong> 
                        @if (Model.EndDateTime < DateTime.Now)
                        {
                            <span class="text-muted">Süresi dolmuş</span>
                        }
                        else if (Model.StartDateTime > DateTime.Now)
                        {
                            <span class="text-info">Gelecekte başlayacak</span>
                        }
                        else
                        {
                            <span class="text-warning">Şu anda aktif</span>
                        }
                    </p>
                </div>
                
                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Evet, Sil
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-eye"></i> Detaylar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-info-circle"></i> Bilgi</h5>
            </div>
            <div class="card-body">
                <p>Müsaitlik bloğu silme işlemi:</p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success"></i> Soft delete yapılır</li>
                    <li><i class="fas fa-check text-success"></i> Veriler korunur</li>
                    <li><i class="fas fa-check text-success"></i> Geri alınabilir</li>
                </ul>
                <hr>
                <p class="text-muted">
                    <small>Eğer bu süre boyunca aktif randevular varsa, önce bunları kontrol etmeniz önerilir.</small>
                </p>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5><i class="fas fa-user-md"></i> Doktor Bilgileri</h5>
            </div>
            <div class="card-body">
                <p><strong>Ad Soyad:</strong> @Model.Doctor?.FullName</p>
                <p><strong>Branş:</strong> @Model.Doctor?.Specialization?.Name</p>
                <p><strong>E-posta:</strong> @Model.Doctor?.Email</p>
                <p><strong>Telefon:</strong> @Model.Doctor?.PhoneNumber</p>
            </div>
        </div>
    </div>
</div>
