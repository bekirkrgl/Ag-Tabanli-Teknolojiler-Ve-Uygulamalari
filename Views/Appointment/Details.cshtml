                </div>
                <div class="info-item">
                    <i class="fas fa-envelope"></i>
                    <strong>E-posta:</strong>
                    <span>@Model.Doctor?.Email</span>
                </div>
                <div class="info-item">
                    <i class="fas fa-phone"></i>
                    <strong>Telefon:</strong>
                    <span>@Model.Doctor?.PhoneNumber</span>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-12 mb-4">
            <div class="info-card">
                <div class="card-icon appointment">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <h5 class="mb-3" style="color: #2d3748; font-weight: 600;">üìÖ Randevu Bilgileri</h5>
                <div class="info-item">
                    <i class="fas fa-calendar"></i>
                    <strong>Tarih:</strong>
                    <span>@Model.AppointmentDate.ToString("dd MMMM yyyy")</span>
                </div>
                <div class="info-item">
                    <i class="fas fa-clock"></i>
                    <strong>Saat:</strong>
                    <span>@Model.AppointmentTime.ToString(@"hh\:mm")</span>
                </div>
                <div class="info-item">
                    <i class="fas fa-info-circle"></i>
                    <strong>Durum:</strong>
                    <span class="status-badge status-@(Model.Status.ToString().ToLower())">
                        @switch(Model.Status.ToString())
                        {
                            case "Scheduled":
                                <text>‚è≥ Planlandƒ±</text>
                                break;
                            case "Confirmed":
                                <text>‚úÖ Onaylandƒ±</text>
                                break;
                            case "Completed":
                                <text>‚úÖ Tamamlandƒ±</text>
                                break;
                            case "Cancelled":
                                <text>‚ùå ƒ∞ptal Edildi</text>
                                break;
                            case "NoShow":
                                <text>üö´ Gelmedi</text>
                                break;
                            default:
                                <text>@Model.Status</text>
                                break;
                        }
                    </span>
                </div>
                <div class="info-item">
                    <i class="fas fa-calendar-plus"></i>
                    <strong>Olu≈üturulma:</strong>
                    <span>@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="info-item">
                        <i class="fas fa-sticky-note"></i>
                        <strong>Notlar:</strong>
                        <span>@Model.Notes</span>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-modern btn-warning-modern me-3">
            <i class="fas fa-edit"></i>
            ‚úèÔ∏è D√ºzenle
        </a>
        <a asp-action="Index" class="btn-modern btn-outline-modern">
            <i class="fas fa-arrow-left"></i>
            ‚Üê Geri D√∂n
        </a>
    </div>
</div>