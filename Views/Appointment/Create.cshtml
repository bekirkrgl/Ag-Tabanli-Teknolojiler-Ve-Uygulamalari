@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.querySelector('#appointmentDate');
            const timeInput = document.querySelector('#appointmentTime');
            const form = document.querySelector('form');
            const submitBtn = document.getElementById('submitBtn');
            
            // Tarih se√ßici i√ßin minimum tarih bug√ºn olsun (ge√ßmi≈ü tarih engelleme)
            // Hafta sonlarƒ±nƒ± engellemek i√ßin bir fonksiyon ekle
            function isWeekend(dateStr) {
                const date = new Date(dateStr);
                const day = date.getDay();
                return day === 0 || day === 6; // 0=Pazar, 6=Cumartesi
            }
            
            // ƒ∞lk ge√ßerli hafta i√ßi g√ºn√º bul
            function getNextWeekday() {
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                let nextDay = new Date(today);
                
                // Bug√ºn hafta sonu ise, bir sonraki Pazartesi'yi bul
                while (nextDay.getDay() === 0 || nextDay.getDay() === 6) {
                    nextDay.setDate(nextDay.getDate() + 1);
                }
                
                return nextDay.toISOString().split('T')[0];
            }
            
            const today = new Date().toISOString().split('T')[0];
            const nextWeekday = getNextWeekday();
            
            if (dateInput) {
                dateInput.setAttribute('min', today);
                dateInput.setAttribute('required', 'required');
                
                // Eƒüer bug√ºn hafta sonu ise, min'i bir sonraki Pazartesi yap
                if (isWeekend(today)) {
                    dateInput.setAttribute('min', nextWeekday);
                }
            }
            
            // Saat se√ßici i√ßin √ßalƒ±≈üma saatleri aralƒ±ƒüƒ± (08:00 - 17:00, 5'ten sonra yok)
            if (timeInput) {
                timeInput.setAttribute('min', '08:00');
                timeInput.setAttribute('max', '17:00');
                timeInput.setAttribute('required', 'required');
                
                // Saat deƒüi≈ütiƒüinde kontrol et
                timeInput.addEventListener('change', function() {
                    const selectedTime = this.value;
                    if (selectedTime) {
                        const hour = parseInt(selectedTime.split(':')[0]);
                        const minute = parseInt(selectedTime.split(':')[1]);
                        // 08:00 - 17:00 arasƒ± olmalƒ± (17:00 dahil, 17:01 ge√ßersiz)
                        if (hour < 8 || hour > 17 || (hour === 17 && minute > 0)) {
                            alert('‚ö†Ô∏è Randevu saatleri 08:00 - 17:00 arasƒ±ndadƒ±r. L√ºtfen ge√ßerli bir saat se√ßin.');
                            this.value = '';
                        }
                    }
                });
            }
            
            // Tarih deƒüi≈ütiƒüinde kontrol et (ge√ßmi≈ü tarih ve hafta sonu engelleme)
            if (dateInput) {
                dateInput.addEventListener('change', function() {
                    const selectedDate = new Date(this.value);
                    const today = new Date();
                    today.setHours(0, 0, 0, 0);
                    
                    if (selectedDate < today) {
                        alert('‚ö†Ô∏è Ge√ßmi≈ü bir tarihe randevu alamazsƒ±nƒ±z. L√ºtfen bug√ºnden itibaren bir tarih se√ßin.');
                        this.value = '';
                        return;
                    }
                    
                    // Hafta sonu kontrol√º (Cumartesi=6, Pazar=0)
                    const dayOfWeek = selectedDate.getDay();
                    if (dayOfWeek === 0 || dayOfWeek === 6) {
                        alert('‚ö†Ô∏è Hafta sonu randevu alamazsƒ±nƒ±z. L√ºtfen hafta i√ßi (Pazartesi-Cuma) bir tarih se√ßin.');
                        this.value = '';
                        return;
                    }
                });
            }
            
            // Form submit kontrol√º
            if (form && submitBtn) {
                form.addEventListener('submit', function(e) {
                    // √ñnce validasyon kontrol√º
                    const doctorSelectElement = document.querySelector('#doctorSelect');
                    const doctorId = doctorSelectElement ? doctorSelectElement.value : '';
                    const appointmentDate = dateInput ? dateInput.value : '';
                    const appointmentTime = timeInput ? timeInput.value : '';
                    
                    console.log('Form submit - DoctorId:', doctorId);
                    console.log('Form submit - AppointmentDate:', appointmentDate);
                    console.log('Form submit - AppointmentTime:', appointmentTime);
                    
                    let hasError = false;
                    
                    // Doktor se√ßilmediyse (sadece select element varsa kontrol et - hidden input varsa zaten se√ßili)
                    if (doctorSelectElement && doctorSelectElement.tagName === 'SELECT' && (!doctorId || doctorId === '')) {
                        alert('‚ö†Ô∏è L√ºtfen bir doktor se√ßin.');
                        hasError = true;
                    }
                    
                    // Tarih se√ßilmediyse
                    if (!appointmentDate || appointmentDate.trim() === '') {
                        alert('‚ö†Ô∏è L√ºtfen bir randevu tarihi se√ßin.');
                        hasError = true;
                    }
                    
                    // Ge√ßmi≈ü tarih kontrol√º
                    if (!hasError && appointmentDate) {
                        const selectedDate = new Date(appointmentDate + 'T00:00:00');
                        const today = new Date();
                        today.setHours(0, 0, 0, 0);
                        if (selectedDate < today) {
                            alert('‚ö†Ô∏è Ge√ßmi≈ü bir tarihe randevu alamazsƒ±nƒ±z.');
                            hasError = true;
                        }
                        
                        // Hafta sonu kontrol√º (Cumartesi=6, Pazar=0)
                        if (!hasError) {
                            const dayOfWeek = selectedDate.getDay();
                            if (dayOfWeek === 0 || dayOfWeek === 6) {
                                alert('‚ö†Ô∏è Hafta sonu randevu alamazsƒ±nƒ±z. L√ºtfen hafta i√ßi (Pazartesi-Cuma) bir tarih se√ßin.');
                                hasError = true;
                            }
                        }
                    }
                    
                    // Saat se√ßilmediyse
                    if (!hasError && (!appointmentTime || appointmentTime.trim() === '')) {
                        alert('‚ö†Ô∏è L√ºtfen bir randevu saati se√ßin.');
                        hasError = true;
                    }
                    
                    // Saat kontrol√º (08:00 - 17:00 arasƒ±, 17:00 dahil)
                    if (!hasError && appointmentTime) {
                        const timeParts = appointmentTime.split(':');
                        if (timeParts.length === 2) {
                            const hour = parseInt(timeParts[0]);
                            const minute = parseInt(timeParts[1]);
                            if (isNaN(hour) || isNaN(minute) || hour < 8 || hour > 17 || (hour === 17 && minute > 0)) {
                                alert('‚ö†Ô∏è Randevu saatleri 08:00 - 17:00 arasƒ±ndadƒ±r.');
                                hasError = true;
                            }
                        } else {
                            alert('‚ö†Ô∏è L√ºtfen ge√ßerli bir randevu saati se√ßin.');
                            hasError = true;
                        }
                    }
                    
                    // Eƒüer hata varsa, form submit'i engelle
                    if (hasError) {
                        e.preventDefault();
                        e.stopPropagation();
                        console.log('‚ùå Form submit engellendi - hata var');
                        return false;
                    }
                    
                    // Eƒüer t√ºm kontroller ge√ßtiyse, butonu disable et
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Randevu Olu≈üturuluyor...';
                    
                    // Form submit edilecek - preventDefault() √ßaƒüƒ±rma!
                    console.log('‚úÖ Form submit ediliyor...');
                    console.log('Final values - DoctorId:', doctorId);
                    console.log('Final values - AppointmentDate:', appointmentDate);
                    console.log('Final values - AppointmentTime:', appointmentTime);
                    
                    // Input'larƒ±n name attribute'larƒ±nƒ± kontrol et
                    console.log('Input name attributes:');
                    console.log('dateInput.name:', dateInput ? dateInput.name : 'dateInput bulunamadƒ±');
                    console.log('timeInput.name:', timeInput ? timeInput.name : 'timeInput bulunamadƒ±');
                    
                    // Form'un action ve method'unu kontrol et
                    console.log('Form action:', form.action);
                    console.log('Form method:', form.method);
                    
                    return true;
                });
            }
        });
    </script>
}