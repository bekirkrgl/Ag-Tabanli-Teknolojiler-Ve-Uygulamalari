@model HastaneRandevuSistemi.Models.Specialization

@{
    ViewData["Title"] = "Branş Sil";
}

<style>
/* MODERN SİLME SAYFASI CSS */
.delete-container {
    background: white;
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 1px solid #e2e8f0;
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
}

.delete-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid #f1f5f9;
}

.delete-icon {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: linear-gradient(135deg, #dc3545, #c82333);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 2rem;
    font-size: 3rem;
    color: white;
}

.delete-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #dc3545;
    margin-bottom: 1rem;
}

.delete-description {
    font-size: 1.2rem;
    color: #718096;
    line-height: 1.6;
    margin-bottom: 2rem;
}

.warning-box {
    background: #fff3cd;
    border: 2px solid #ffeaa7;
    border-radius: 12px;
    padding: 2rem;
    margin-bottom: 2rem;
}

.warning-icon {
    color: #856404;
    font-size: 2rem;
    margin-bottom: 1rem;
}

.warning-title {
    color: #856404;
    font-weight: 700;
    font-size: 1.2rem;
    margin-bottom: 1rem;
}

.warning-text {
    color: #856404;
    margin-bottom: 0;
}

.info-item {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    padding: 1rem;
    background: #f8fafc;
    border-radius: 12px;
}

.info-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea, #764ba2);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    color: white;
    font-size: 1.2rem;
}

.info-content h5 {
    margin: 0;
    color: #2d3748;
    font-weight: 600;
}

.info-content p {
    margin: 0;
    color: #718096;
    font-size: 0.9rem;
}

.btn-modern {
    padding: 15px 30px;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    border: none;
    cursor: pointer;
    font-size: 1rem;
}

.btn-modern:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.15);
}

.btn-danger-modern {
    background: linear-gradient(135deg, #dc3545, #c82333);
    color: white;
}

.btn-outline-modern {
    background: transparent;
    color: #667eea;
    border: 3px solid #667eea;
}

.btn-outline-modern:hover {
    background: #667eea;
    color: white;
}

@@media (max-width: 768px) {
    .delete-container {
        padding: 2rem 1.5rem;
    }
    
    .delete-title {
        font-size: 2rem;
    }
    
    .info-item {
        flex-direction: column;
        text-align: center;
    }
    
    .info-icon {
        margin-right: 0;
        margin-bottom: 1rem;
    }
}
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="delete-container">
                <div class="delete-header">
                    <div class="delete-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h1 class="delete-title">Branş Sil</h1>
                    <p class="delete-description">
                        Bu branşı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.
                    </p>
                </div>
                
                <div class="warning-box">
                    <div class="warning-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <h4 class="warning-title">Dikkat!</h4>
                    <p class="warning-text">
                        Bu branşı sildiğinizde, bu branşa ait tüm doktorlar da silinecektir. 
                        Bu işlem geri alınamaz ve tüm veriler kalıcı olarak kaybolacaktır.
                    </p>
                </div>
                
                <div class="info-item">
                    <div class="info-icon">
                        <i class="fas fa-tag"></i>
                    </div>
                    <div class="info-content">
                        <h5>@Model.Name</h5>
                        <p>@Model.Description</p>
                    </div>
                </div>
                
                @if (Model.Doctors != null && Model.Doctors.Any())
                {
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="info-content">
                            <h5>@Model.Doctors.Count Doktor</h5>
                            <p>Bu branşa ait @Model.Doctors.Count doktor da silinecektir</p>
                        </div>
                    </div>
                }
                
                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-3 justify-content-center">
                        <button type="submit" class="btn-modern btn-danger-modern">
                            <i class="fas fa-trash"></i>
                            Evet, Sil
                        </button>
                        <a asp-action="Index" class="btn-modern btn-outline-modern">
                            <i class="fas fa-arrow-left"></i>
                            İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
