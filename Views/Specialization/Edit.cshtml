@model HastaneRandevuSistemi.Models.Specialization

@{
    ViewData["Title"] = "Branş Düzenle";
}

<style>
/* MODERN FORM CSS */
.form-container {
    background: white;
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 1px solid #e2e8f0;
    max-width: 600px;
    margin: 0 auto;
}

.form-title {
    font-size: 2rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 2rem;
    color: #2d3748;
}

.form-group {
    margin-bottom: 2rem;
}

.form-label {
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 0.5rem;
    display: block;
}

.form-control {
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    padding: 12px 16px;
    font-size: 1rem;
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
}

.form-control.is-invalid {
    border-color: #dc3545;
}

.invalid-feedback {
    color: #dc3545;
    font-size: 0.875rem;
    margin-top: 0.25rem;
}

.btn-modern {
    padding: 15px 30px;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    border: none;
    cursor: pointer;
    font-size: 1rem;
}

.btn-modern:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 35px rgba(0,0,0,0.15);
}

.btn-primary-modern {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
}

.btn-outline-modern {
    background: transparent;
    color: #667eea;
    border: 3px solid #667eea;
}

.btn-outline-modern:hover {
    background: #667eea;
    color: white;
}

.textarea-custom {
    min-height: 120px;
    resize: vertical;
}
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-container">
                <h2 class="form-title">
                    <i class="fas fa-edit me-3"></i>
                    Branş Düzenle
                </h2>
                
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-tag me-2"></i>
                            Branş Adı
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Örn: Kardiyoloji, Nöroloji, Ortopedi" />
                        <span asp-validation-for="Name" class="invalid-feedback"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-info-circle me-2"></i>
                            Açıklama
                        </label>
                        <textarea asp-for="Description" class="form-control textarea-custom" placeholder="Branş hakkında detaylı bilgi yazın..."></textarea>
                        <span asp-validation-for="Description" class="invalid-feedback"></span>
                    </div>
                    
                    <div class="d-flex gap-3 justify-content-center">
                        <button type="submit" class="btn-modern btn-primary-modern">
                            <i class="fas fa-save"></i>
                            Güncelle
                        </button>
                        <a asp-action="Index" class="btn-modern btn-outline-modern">
                            <i class="fas fa-arrow-left"></i>
                            Geri Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
