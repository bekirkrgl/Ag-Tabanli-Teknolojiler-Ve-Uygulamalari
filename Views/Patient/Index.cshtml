@model IEnumerable<HastaneRandevuSistemi.Models.Patient>

@{
    ViewData["Title"] = "Hastalar";
}

<style>
/* MODERN HASTALAR SAYFASI */
.page-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 40px 0;
    margin-bottom: 30px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
}

.page-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.page-subtitle {
    font-size: 1.1rem;
    opacity: 0.9;
    margin-bottom: 0;
}

.patients-container {
    padding: 20px 0;
    min-height: 60vh;
}

.patients-scroll-container {
    position: relative;
    padding: 0 100px;
    overflow: hidden;
}

.patients-scroll-wrapper {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    scroll-behavior: smooth;
    padding: 20px 0;
    scrollbar-width: none;
    -ms-overflow-style: none;
}

.patients-scroll-wrapper::-webkit-scrollbar {
    display: none;
}

.patient-card {
    flex: 0 0 300px;
    min-width: 300px;
}

.scroll-navigation {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 1000;
    left: 0;
    right: 0;
    pointer-events: none;
    height: 0;
}

.scroll-btn {
    position: absolute;
    z-index: 1001;
    pointer-events: auto;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: white;
    border: 2px solid #667eea;
    color: #667eea;
    font-size: 1.2rem;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.scroll-btn:hover {
    background: #667eea;
    color: white;
    transform: scale(1.1);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
}

.scroll-left {
    left: 20px;
}

.scroll-right {
    right: 20px;
}

.patient-card {
    background: white;
    border-radius: 20px;
    padding: 1.5rem;
    text-align: center;
    box-shadow: 0 8px 25px rgba(0,0,0,0.08);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    height: 100%;
    border: 1px solid #e2e8f0;
    margin-bottom: 1.5rem;
    position: relative;
    overflow: hidden;
}

.patient-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    transform: scaleX(0);
    transition: transform 0.3s ease;
}

.patient-card:hover::before {
    transform: scaleX(1);
}

.patient-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
}

.patient-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea, #764ba2);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    font-size: 2rem;
    color: white;
    transition: all 0.3s ease;
    border: 3px solid white;
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
}

.patient-card:hover .patient-avatar {
    transform: scale(1.1);
    box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
}

.card-title {
    font-size: 1.2rem;
    font-weight: 700;
    margin-bottom: 0.8rem;
    color: #2d3748;
    line-height: 1.3;
}

.card-text {
    color: #718096;
    margin-bottom: 0.8rem;
    line-height: 1.5;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}

.card-text i {
    color: #667eea;
    width: 16px;
}

.btn-modern {
    padding: 10px 20px;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    border: none;
    cursor: pointer;
    font-size: 0.85rem;
    flex: 1;
    justify-content: center;
}

.btn-modern:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.btn-primary-modern {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
}

.btn-outline-modern {
    background: transparent;
    color: #667eea;
    border: 2px solid #e2e8f0;
}

.btn-outline-modern:hover {
    background: #667eea;
    color: white;
    border-color: #667eea;
}

.btn-success-modern {
    background: linear-gradient(135deg, #48bb78, #68d391);
    color: white;
    padding: 12px 24px;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    border: none;
    cursor: pointer;
    font-size: 1rem;
}

.btn-success-modern:hover {
    background: linear-gradient(135deg, #38a169, #48bb78);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(72, 187, 120, 0.3);
}

.empty-state {
    text-align: center;
    padding: 60px 20px;
    background: white;
    border-radius: 20px;
    box-shadow: 0 8px 25px rgba(0,0,0,0.08);
    border: 1px solid #e2e8f0;
}

.empty-state .patient-avatar {
    width: 120px;
    height: 120px;
    font-size: 3rem;
    margin-bottom: 2rem;
}

.empty-state h3 {
    color: #2d3748;
    margin-bottom: 1rem;
    font-weight: 600;
}

.empty-state p {
    color: #718096;
    margin-bottom: 2rem;
}

/* Mobile Responsive */
@@media (max-width: 768px) {
    .page-header {
        padding: 30px 0;
        margin-bottom: 20px;
    }
    
    .page-title {
        font-size: 2rem;
    }
    
    .page-subtitle {
        font-size: 1rem;
    }
    
    .patients-container {
        padding: 15px 0;
    }
    
    .patients-scroll-container {
        padding: 0 80px;
    }
    
    .patient-card {
        flex: 0 0 280px;
        min-width: 280px;
        padding: 1.2rem;
    }
    
    .patient-avatar {
        width: 70px;
        height: 70px;
        font-size: 1.8rem;
    }
    
    .card-title {
        font-size: 1.1rem;
    }
    
    .btn-modern {
        padding: 8px 16px;
        font-size: 0.8rem;
    }
    
    .scroll-btn {
        width: 40px;
        height: 40px;
        font-size: 1rem;
    }
    
    .scroll-left {
        left: 15px;
    }
    
    .scroll-right {
        right: 15px;
    }
}
</style>

<!-- PAGE HEADER -->
<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="page-title">
                    <i class="fas fa-users me-3"></i>
                    üë• Hastalar
                </h1>
                <p class="page-subtitle">
                    Kayƒ±tlƒ± hasta bilgilerini g√∂r√ºnt√ºleyin ve y√∂netin
                </p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a asp-action="Create" class="btn-success-modern">
                    <i class="fas fa-plus"></i>
                    ‚ûï Yeni Hasta Ekle
                </a>
            </div>
        </div>
    </div>
</div>

<!-- PATIENTS HORIZONTAL SCROLL -->
<div class="container patients-container">
    @if (Model.Any())
    {
        <div class="patients-scroll-container">
            <div class="patients-scroll-wrapper" id="patientsScroll">
                @foreach (var patient in Model)
                {
                    <div class="patient-card">
                        <div class="patient-avatar">
                            <i class="fas fa-user"></i>
                        </div>
                        <h3 class="card-title">@patient.FullName</h3>
                        @if (!string.IsNullOrEmpty(patient.Email))
                        {
                            <p class="card-text">
                                <i class="fas fa-envelope"></i>
                                @patient.Email
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(patient.PhoneNumber))
                        {
                            <p class="card-text">
                                <i class="fas fa-phone"></i>
                                @patient.PhoneNumber
                            </p>
                        }
                        @if (patient.BirthDate.HasValue)
                        {
                            <p class="card-text">
                                <i class="fas fa-birthday-cake"></i>
                                @patient.BirthDate.Value.ToString("dd.MM.yyyy")
                            </p>
                        }
                        <div class="d-flex gap-2 justify-content-center mt-3">
                            <a asp-action="Details" asp-route-id="@patient.Id" class="btn-modern btn-primary-modern">
                                <i class="fas fa-eye"></i>
                                üëÅÔ∏è Detaylar
                            </a>
                            <a asp-action="Edit" asp-route-id="@patient.Id" class="btn-modern btn-outline-modern">
                                <i class="fas fa-edit"></i>
                                ‚úèÔ∏è D√ºzenle
                            </a>
                        </div>
                    </div>
                }
            </div>
            
            <!-- SCROLL NAVIGATION -->
            <div class="scroll-navigation">
                <button class="btn btn-light scroll-btn scroll-left" onclick="scrollPatients('left')">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button class="btn btn-light scroll-btn scroll-right" onclick="scrollPatients('right')">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="patient-avatar mx-auto">
                <i class="fas fa-user-slash"></i>
            </div>
            <h3>Hen√ºz hasta bilgisi bulunmamaktadƒ±r</h3>
            <p>ƒ∞lk hastanƒ±zƒ± ekleyerek ba≈ülayƒ±n</p>
            <a asp-action="Create" class="btn-success-modern">
                <i class="fas fa-plus"></i>
                ‚ûï ƒ∞lk Hastayƒ± Ekle
            </a>
        </div>
    }
</div>

<script>
function scrollPatients(direction) {
    const container = document.getElementById('patientsScroll');
    const scrollAmount = 320; // 300px card width + 20px gap
    
    if (direction === 'left') {
        container.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    } else {
        container.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    }
}
</script>